{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "**.cs"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**",
                        "_site/**"
                    ]
                }
            ],
            "dest": "api",
            "filter": "filter_config.yml",
	    "shouldSkipMarkup": true
        }
    ],
    "build": {
	"xrefService":[
		"https://xref.docs.microsoft.com/query?uid={uid}"
	],
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "natives/**.md",
                    "faq/**.md",
                    "toc.yml",
                    "*.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**",
                    "langword_mapping.yml"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "DSharpPlus documentation",
            "_appFooter": "Â© 2016-2023 DSharpPlus Contributors",
	    "_appLogoPath": "images/logo.png",
            "_appFaviconPath": "images/favicon.ico",
            "_enableSearch": "true"
        },
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default",
            "templates/singulink/singulinkfx"
        ],
        "postProcessors": [
            "ExtractSearchIndex"
        ],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false
    }
}
