<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPublicFacing>true</IsPublicFacing>
    <Description>$(Description) This package contains shared types between public-facing and internal implementation packages.</Description>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    
    <RootNamespace>DSharpPlus</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(DesignTimeBuild)' == '' OR '$(BuildingProject)' == 'true'">
    <TargetFrameworks>netstandard2.0;$(TargetFramework)</TargetFrameworks>
    
    <!-- set TargetFramework to empty to avoid msbuild trying to build only net8.0 and failing to pack -->
    <TargetFramework></TargetFramework>
  </PropertyGroup>

  <!-- don't build everything for sgen, only files we manually want to be built -->
  <PropertyGroup Condition="'$(Framework)' == 'NETSTANDARD2_0'">
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <ItemGroup Condition="'$(Framework)' == 'NETSTANDARD2_0'">
    <Compile Include="Collections\DictionarySlim.cs" />
    <Compile Include="Collections\DictionarySlimDebugView.cs" />
    <Compile Include="Collections\ThrowHelper.cs" />
  </ItemGroup>

</Project>
