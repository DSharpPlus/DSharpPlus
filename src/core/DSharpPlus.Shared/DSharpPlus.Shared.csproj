<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>$(_DSharpPlusReleaseVersion)</VersionPrefix>
    <Description>$(Description) This package contains shared types between public-facing and internal implementation packages.</Description>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>$(NoWarn);CA1008</NoWarn>
    
    <RootNamespace>DSharpPlus</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.HighPerformance" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="NetEscapades.EnumGenerators" />
    <PackageReference Include="System.IO.Pipelines" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\lib\bundles\src\Bundles\Bundles.csproj" />
  </ItemGroup>

</Project>
